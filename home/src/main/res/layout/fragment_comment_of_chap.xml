<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.comment_of_chap.CommentOfChapFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListComments"
        style="@style/normal_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ctlFooter"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">
        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#f3f3f3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/edComment"
            style="@style/normal_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/v1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivSend"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="@string/TEXT_HINT_WRITE_REPLY"
            android:maxLines="3"
            android:layout_margin="@dimen/dp15"
            android:background="@drawable/bg_edt_write_reply"
            android:paddingStart="@dimen/dp20"
            android:paddingEnd="@dimen/dp15"
            android:paddingTop="@dimen/dp10"
            android:textSize="@dimen/sp20"
            android:paddingBottom="@dimen/dp10"
            android:textColor="@color/black"/>

        <com.rey.material.widget.ImageView
            android:id="@+id/ivSend"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icon_send"
            android:padding="@dimen/dp5"
            style="@style/btn_ripple_normal_0"
            android:layout_marginEnd="@dimen/dp15"
            android:tint="#cdcdcd"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>