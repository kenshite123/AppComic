<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlComic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp20">
        <ImageView
            android:id="@+id/ivComic"
            android:layout_width="@dimen/dp155"
            android:layout_height="@dimen/dp200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/ivComic"
            app:layout_constraintBottom_toBottomOf="@+id/ivComic"
            app:layout_constraintStart_toEndOf="@+id/ivComic"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/dp20">
            <TextView
                android:id="@+id/tvRank"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/sp24"
                android:text="1"
                android:background="@drawable/bg_rank_top1"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvRank"
                android:layout_marginEnd="@dimen/dp20"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sp22"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="left|center_vertical"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListCategory"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp60"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="@+id/tvTitle"
                app:layout_constraintEnd_toEndOf="@+id/tvTitle"
                android:layout_marginTop="@dimen/dp10"/>
            <TextView
                android:id="@+id/tvLatestChapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rvListCategory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp10"
                android:textSize="@dimen/sp20"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvLatestChapter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp20"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingEnd="@dimen/dp10"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp20"
                    android:layout_weight="1.7"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingStart="@dimen/dp10"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#dbdbdb" />
</com.rey.material.widget.LinearLayout>