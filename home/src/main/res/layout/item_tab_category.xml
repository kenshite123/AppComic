<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlCategory"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:background="@drawable/bg_ctl_category"
        android:layout_marginTop="@dimen/dp5">
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/TEXT_CATEGORY"
            android:layout_marginStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp20"
            android:textSize="@dimen/sp16"
            android:maxWidth="@dimen/dp100"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvCategories"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCategory"
            app:layout_constraintEnd_toStartOf="@+id/ivArrowDownCategory"
            app:layout_constraintBottom_toBottomOf="parent"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:paddingEnd="@dimen/dp8"
            android:textSize="@dimen/sp14"
            android:paddingStart="@dimen/dp8"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/ivArrowDownCategory"
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/dp15"
            android:src="@drawable/icon_arrow_down_black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llStatusAndType"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp50"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ctlCategory"
        app:layout_constraintStart_toStartOf="@+id/ctlCategory"
        app:layout_constraintEnd_toEndOf="@+id/ctlCategory"
        android:layout_marginTop="@dimen/dp10">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctlStatus"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_marginEnd="@dimen/dp10"
            android:background="@drawable/bg_ctl_category"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/TEXT_STATUS"
                android:layout_marginStart="@dimen/dp15"
                android:paddingEnd="@dimen/dp20"
                android:textSize="@dimen/sp16"
                android:maxWidth="@dimen/dp100"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvStatusTitle"
                app:layout_constraintEnd_toStartOf="@+id/ivArrowDownStatus"
                app:layout_constraintBottom_toBottomOf="parent"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:paddingEnd="@dimen/dp8"
                android:textSize="@dimen/sp14"
                android:paddingStart="@dimen/dp8"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/ivArrowDownStatus"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/dp15"
                android:src="@drawable/icon_arrow_down_black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctlType"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_marginStart="@dimen/dp10"
            android:background="@drawable/bg_ctl_category"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvTypeTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/TEXT_TYPE"
                android:layout_marginStart="@dimen/dp15"
                android:paddingEnd="@dimen/dp20"
                android:textSize="@dimen/sp16"
                android:maxWidth="@dimen/dp100"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvType"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvTypeTitle"
                app:layout_constraintEnd_toStartOf="@+id/ivArrowDownType"
                app:layout_constraintBottom_toBottomOf="parent"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:paddingEnd="@dimen/dp8"
                android:textSize="@dimen/sp14"
                android:paddingStart="@dimen/dp8"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/ivArrowDownType"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/dp15"
                android:src="@drawable/icon_arrow_down_black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListComic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/llStatusAndType"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp10"/>

    <include
        android:id="@+id/statusTypeFilterView"
        layout="@layout/item_bound_status_type_filter_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>